<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.apod.ApodViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.apod.ui.fragments.ApodFragment" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/status_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:imageUrl="@{viewModel.photo.url}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            tools:srcCompat ="@tools:sample/backgrounds/scenic" />

        <View
            android:id="@+id/date_box"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/box_colour"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_image" />

        <TextView
            android:id="@+id/date_day"
            style="@style/dateBoxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{viewModel.day}"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/date_box"
            app:layout_constraintStart_toStartOf="@+id/date_box"
            app:layout_constraintTop_toTopOf="@+id/date_box"
            tools:text="1" />

        <TextView
            android:id="@+id/date_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/dateBoxText"
            android:textSize="18dp"
            android:text="@{viewModel.monthYear}"
            app:layout_constraintBottom_toBottomOf="@+id/date_box"
            app:layout_constraintEnd_toEndOf="@+id/date_box"
            app:layout_constraintStart_toStartOf="@+id/date_box"
            tools:text="Jan 2022" />

        <View
            android:id="@+id/top_rectangle"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/box_colour"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_box"
            app:layout_constraintTop_toBottomOf="@+id/status_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@{viewModel.photo.title}"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/top_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/top_rectangle"
            tools:text="Apod Title" />

        <View
            android:id="@+id/bottom_rectangle"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:background="@color/box_colour"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/date_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_box" />

        <ImageView
            android:id="@+id/icon_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="@id/date_box"
            app:layout_constraintTop_toBottomOf="@id/bottom_rectangle"
            app:srcCompat="@drawable/ic_baseline_wallpaper_24" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_wallpaper">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:fillViewport="true"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="A description of the image" />

            </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>